<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp">


    <ImageView
        android:id="@+id/inquiryImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/inquiryText"
            android:text="hello, hello!"
            android:background="@drawable/rounded_rectangle_orange"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/inquiryImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
    android:layout_width="250dp"
    android:layout_height="45dp"
    android:scaleX="0.5"
    android:scaleY="0.5"
    android:id="@+id/reviewRating"
    android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
    android:layout_toRightOf="@id/inquiryImage"
    android:layout_below="@id/inquiryText"
    />

    <TextView
        android:id="@+id/inquiryTime"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/inquiryImage"
        android:layout_below="@+id/inquiryText"
        android:text="11:40"
        android:textColor="@color/grey"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/inquirySender"
        android:text="Ashri"
        android:layout_below="@+id/inquiryImage"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/inquiryText"
        app:layout_constraintRight_toLeftOf="@+id/inquiryText" />
</RelativeLayout>
